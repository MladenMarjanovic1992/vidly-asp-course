@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>



<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release date: @Model.ReleaseDate.Date.ToLongDateString()</li> 
    <li>Date added: @Model.DateAdded.Date.ToLongDateString()</li> 
    <li>Number in stock: @Model.NumberInStock</li> 
</ul>

@Html.ActionLink("Edit Movie", "Edit", "Movie", new { Id = Model.Id }, new { @class = "btn btn-primary" })

