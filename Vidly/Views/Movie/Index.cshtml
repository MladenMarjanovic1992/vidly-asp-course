@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table">
    <thead>
    <tr>
        <td><strong>Movie</strong></td>
        <td><strong>Genre</strong></td>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@Html.ActionLink(m.Name, "Details", new { id = m.Id })</td>
            <td>@m.Genre.Name</td>
        </tr>
    }
    </tbody>

</table>

